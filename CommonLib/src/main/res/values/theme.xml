<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--系统原生弹窗样式-->
    <style name="NativeDialogStyle" parent="Theme.MaterialComponents.DayNight.Dialog.Alert" />

    <!-- 默认弹窗样式-->
    <style name="DefaultDialogStyle" parent="Theme.MaterialComponents.DayNight.Dialog">
        <!-- 窗口背景色（透明）-->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--加载弹窗样式-->
    <style name="LoadingDialogStyle" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="dialogCornerRadius">@dimen/dialog_corner_radius</item>
    </style>

    <!-- 透明Activity -->
    <style name="TranslucentActivity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>